<xs:schema
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        xmlns="http://keymaster65.github.io/architecture"
        targetNamespace="http://keymaster65.github.io/architecture"
        elementFormDefault="qualified"
>
    <xs:include schemaLocation="Element.xsd"/>
    <xs:include schemaLocation="Package.xsd"/>
    <xs:include schemaLocation="ProcessorPool.xsd"/>

    <xs:complexType name="Application">
        <xs:complexContent>
            <xs:extension base="Element">
                <xs:sequence>
                    <xs:element name="processorPools" minOccurs="0">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="processorPool" type="ProcessorPool"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                    <xs:element name="packages" minOccurs="0">
                        <xs:complexType>
                            <xs:sequence>
                                <xs:element name="package" type="Package"/>
                            </xs:sequence>
                        </xs:complexType>
                    </xs:element>
                </xs:sequence>
                <xs:attribute name="registry"/>
            </xs:extension>
        </xs:complexContent>
    </xs:complexType>


</xs:schema>